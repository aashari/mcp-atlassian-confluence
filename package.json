{
	"name": "@aashari/boilerplate-mcp-server",
	"version": "1.0.0",
	"description": "A boilerplate Model Context Protocol (MCP) server implementation using TypeScript",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "tsc",
		"clean": "rimraf dist",
		"dev": "NODE_OPTIONS=\"--no-warnings --loader ts-node/esm\" node src/index.ts",
		"format:check": "prettier --check \"src/**/*.ts\"",
		"format": "prettier --write \"src/**/*.ts\"",
		"inspector": "mcp-inspector -- npm run --silent dev",
		"lint:fix": "eslint src --ext .ts --fix",
		"lint": "eslint src --ext .ts",
		"prebuild": "npm run clean",
		"prepare": "npm run build",
		"start": "node dist/index.js",
		"test": "jest",
		"test:coverage": "jest --coverage",
		"watch": "tsc --watch"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/aashari/boilerplate-mcp-server.git"
	},
	"keywords": [
		"mcp",
		"model-context-protocol",
		"ai",
		"llm",
		"typescript",
		"server"
	],
	"author": {
		"name": "Andi Ashari",
		"url": "https://github.com/aashari"
	},
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/aashari/boilerplate-mcp-server/issues"
	},
	"homepage": "https://github.com/aashari/boilerplate-mcp-server#readme",
	"engines": {
		"node": ">=22.14.0"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.7.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.22.0",
		"@modelcontextprotocol/inspector": "^0.6.0",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.13.10",
		"eslint": "^9.22.0",
		"eslint-config-prettier": "^10.1.1",
		"eslint-plugin-prettier": "^5.2.3",
		"jest": "^29.7.0",
		"prettier": "^3.5.3",
		"rimraf": "^5.0.10",
		"ts-jest": "^29.2.6",
		"ts-node": "^10.9.2",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.1"
	}
}
